@using BlazorAdmin.Client
@using System.Diagnostics.CodeAnalysis
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link href="_content/AntDesign/css/ant-design-blazor.css" rel="stylesheet">
    <script src="_content/AntDesign/js/ant-design-blazor.js"></script>
    <Project.Web.Shared.Components.Link Href="_content/Project.Web.Shared/css/app.css" />
    <Project.Web.Shared.Components.Link Href="app.css" />
    <Project.Web.Shared.Components.Link Href="BlazorAdmin.styles.css" />
    <HeadOutlet @rendermode="@RenderMode" />
</head>

<body>
    <Routes @rendermode="@RenderMode" />

    <Project.Web.Shared.Components.ReconnectorOutlet @rendermode="@RenderMode"></Project.Web.Shared.Components.ReconnectorOutlet>

    <script src="_framework/blazor.web.js"></script>
    <Project.Web.Shared.Components.Script Src="./js//blazor-admin-project.js"></Project.Web.Shared.Components.Script>
</body>

</html>

@code {
    [CascadingParameter, NotNull] public HttpContext? HttpContext { get; set; }
    IComponentRenderMode? RenderMode
    {
        get
        {
            if (HttpContext.Request.Path.StartsWithSegments("/login"))
            {
                return null;
            }
            return new InteractiveWebAssemblyRenderMode(false);
        }
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

}