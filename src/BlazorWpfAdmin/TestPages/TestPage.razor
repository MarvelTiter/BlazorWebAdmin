<AntDesign.CheckboxGroup @bind-Value=checkedUsers
                         OnChange="Changed2"
                         Options="users.ConvertToCheckBoxOptions(u=>u.UserName, u=>u.UserId)">
</AntDesign.CheckboxGroup>
<br />
@(string.Join(",", checkedUsers ?? []))
